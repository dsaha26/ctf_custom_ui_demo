    "version": "0.2.0",
    "configurations": [
        {
            "name": "Custom UI",
            "type": "pwa-node",
            "request": "launch",
            "program": "${workspaceFolder}/index.js",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Scraper",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/backend/scraper.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "dtf",
                "list",
                "test_setups"
            ]
        }
    ]
}
